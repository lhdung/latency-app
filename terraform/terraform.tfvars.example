# Example Terraform variables file
# Copy this to terraform.tfvars and customize

aws_region = "us-east-1"
environment = "dev"
instance_type = "t3.micro"

# Generate SSH key pair:
# ssh-keygen -t rsa -b 4096 -f ~/.ssh/latency-monitor
# Then paste the public key here:
public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQC... your-public-key-here"

# Restrict SSH access to your IP for better security
# Find your IP: curl ifconfig.me
ssh_allowed_cidr = ["YOUR.PUBLIC.IP.ADDRESS/32"]

# Docker image for the latency monitor application
# This will be pulled from Docker Hub during deployment
docker_image = "lhdung/latency-app:latest"
